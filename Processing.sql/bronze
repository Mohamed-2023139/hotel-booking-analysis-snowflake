    -- Create File Format
    CREATE OR REPLACE FILE FORMAT FF_CSV
        TYPE = 'CSV'
        FIELD_OPTIONALLY_ENCLOSED_BY = '"'
        SKIP_HEADER = 1
        NULL_IF = ('NULL', 'null', '');

    -- Create Stage
    CREATE OR REPLACE STAGE STG_HOTEL_BOOKINGS
        FILE_FORMAT = FF_CSV;

    -- Create Bronze Table
    CREATE OR REPLACE TABLE BRONZE_HOTEL_BOOKING (
        booking_id STRING,
        hotel_id STRING,
        hotel_city STRING,
        customer_id STRING,
        customer_name STRING,
        customer_email STRING,
        check_in_date STRING,
        check_out_date STRING,
        room_type STRING,
        num_guests STRING,
        total_amount STRING,
        currency STRING,
        booking_status STRING
    );

    -- Load Data
    COPY INTO BRONZE_HOTEL_BOOKING
    FROM @STG_HOTEL_BOOKINGS
    ON_ERROR = 'CONTINUE';

    -- Log
    SELECT 'Loading Bronze Table Completed';

    -- Preview Data
    SELECT * FROM BRONZE_HOTEL_BOOKING;
